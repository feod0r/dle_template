<div class="panel panel-default">
	<div class="panel panel-heading">
		<div class="panel-title">
			Добавить новость
		</div>
	</div>
	<div class="panel panel-body">
		<div class="form-group">
			<label for="title">Заголовок: </label>
			<input type="text" id="title" name="title" value="{title}" maxlength="150" class="form-control">
		</div>
		<div class="form-group">
			<label for="alt_name">URL статьи: </label>
			<input type="text" name="alt_name" value="{alt-name}" maxlength="150" class="form-control">
		</div>
		<div class="form-group">
			<label for="alt_name">Категория: </label>
			{category}
		</div>
		
	</div>
</div>