[short-preview]
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">[full-link]{title}[/full-link]</div>
	</div>
	<div class="panel-body">
		{short-story}
	</div>
	<div class="panel-footer">
		<div class="lineDiv">
			<span class="glyphicon glyphicon-user"></span> <b>{author}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-eye-open"></span> <b>{views}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-comment"></span> <b>{comments-num}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-time"></span> <b>{date}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			[full-link]<b class="btn btn-success" style="float: right;">„итать дальше</b>[/full-link]
			[edit]<button type="button" class="btn btn-default"><span class="caret"></span></button>[/edit]
		</div>
	</div>
</div>
[/short-preview]
[full-preview]
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">{title}</div>
	</div>
	<div class="panel-body">
		{full-story}
	</div>
	<div class="panel-footer">
		<div class="lineDiv">
			<span class="glyphicon glyphicon-user"></span> <b>{author}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-eye-open"></span> <b>{views}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-comment"></span> <b>{comments-num}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="glyphicon glyphicon-time"></span> <b>{date}</b>&nbsp;&nbsp;&nbsp;&nbsp;
			<a class="btn btn-warning" href="javascript:history.go(-1)" style="float: right;">Назад</a>
			[edit]<button type="button" class="btn btn-default"><span class="caret"></span></button>[/edit]
		</div>
	</div>
</div>
[/full-preview]
[static-preview]
<div class="basecont">
	<div class="dpad">
		<h2 class="heading">{description}</h2>
		{static}
		<br clear="all" />
		<div class="storenumber">{pages}</div>
	</div>
</div>
[/static-preview]
